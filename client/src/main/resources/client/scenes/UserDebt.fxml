         <children>
            <Label layoutX="24.0" layoutY="52.0" text="You settled all your debts!" />
            <Button layoutX="67.0" layoutY="82.0" mnemonicParsing="false" onAction="#goToDebts" text="Return" />
         </children>
      </AnchorPane>
