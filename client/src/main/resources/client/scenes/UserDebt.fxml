         <children>
            <Label layoutX="7.0" layoutY="5.0" />
         </children>
      </AnchorPane>
      <Label layoutX="133.0" layoutY="77.0" text="Debts">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="360.0" layoutY="77.0" text="Details">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
