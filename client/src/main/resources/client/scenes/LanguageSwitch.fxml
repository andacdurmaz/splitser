<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContentDisplay?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="178.0" prefWidth="404.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.LanguageSwitchCtrl">
    <children>
        <Button layoutX="67.0" layoutY="75.0" onAction="#setEnglish" prefHeight="60.0" prefWidth="70.0" text="English">
            <contentDisplay>
                <ContentDisplay fx:value="BOTTOM" />
            </contentDisplay>
            <graphic>
                <ImageView fx:id="englishImage" fitHeight="30.0" fitWidth="30.0">
                    <Image url="@../images/englishIcon.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button layoutX="172.0" layoutY="75.0" onAction="#setDutch" prefHeight="60.0" prefWidth="70.0" text="Dutch">
            <contentDisplay>
                <ContentDisplay fx:value="BOTTOM" />
            </contentDisplay>
            <graphic>
                <ImageView fx:id="dutchImage" fitHeight="30.0" fitWidth="30.0">
                    <Image url="@../images/dutchIcon.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button layoutX="278.0" layoutY="75.0" prefHeight="60.0" prefWidth="70.0" text="Button">
            <contentDisplay>
                <ContentDisplay fx:value="BOTTOM" />
            </contentDisplay>
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0">
                    <Image url="@../images/englishIcon.png" />
                </ImageView>
            </graphic>
        </Button>
      <Label layoutX="138.0" layoutY="31.0" text="%choose-language" textAlignment="CENTER">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#backButton" text="Back" />
    </children>
</AnchorPane>
