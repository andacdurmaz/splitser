<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContentDisplay?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="178.0" prefWidth="404.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.LanguageSwitchCtrl">
    <children>
        <Button layoutX="67.0" layoutY="75.0" onAction="#setEnglish" prefHeight="60.0" prefWidth="70.0" text="%english">
            <contentDisplay>
                <ContentDisplay fx:value="BOTTOM" />
            </contentDisplay>
            <graphic>
                <ImageView fx:id="englishImage" fitHeight="30.0" fitWidth="30.0">
                    <Image url="@../images/englishIcon.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button layoutX="172.0" layoutY="75.0" onAction="#setDutch" prefHeight="60.0" prefWidth="70.0" text="%dutch">
            <contentDisplay>
                <ContentDisplay fx:value="BOTTOM" />
            </contentDisplay>
            <graphic>
                <ImageView fx:id="dutchImage" fitHeight="30.0" fitWidth="30.0">
                    <Image url="@../images/dutchIcon.png" />
                </ImageView>
            </graphic>
        </Button>
        <Button layoutX="278.0" layoutY="75.0" onAction="#setTurkish" prefHeight="60.0" prefWidth="70.0" text="%turkish">
            <contentDisplay>
                <ContentDisplay fx:value="BOTTOM" />
            </contentDisplay>
            <graphic>
                <ImageView fx:id="turkishImage"  fitHeight="30.0" fitWidth="30.0">
                    <Image url="@../images/turkishIcon.png" />
                </ImageView>
            </graphic>
        </Button>
      <Label layoutX="138.0" layoutY="31.0" text="%choose-language" textAlignment="CENTER">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#backButton" text="Back" />
      <Button fx:id="downloadThemplate" layoutX="140.0" layoutY="148.0" mnemonicParsing="false" onAction="#downloadThemplate" prefHeight="25.0" prefWidth="134.0" text="%download-themplate" textAlignment="CENTER" wrapText="true" />
    </children>
</AnchorPane>
