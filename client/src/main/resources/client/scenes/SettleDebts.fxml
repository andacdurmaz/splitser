<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane  prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.SettleDebtsCtrl">
    <children>
        <Label layoutX="236.0" layoutY="19.0" text="Open Debts">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <ListView fx:id="debtsListView" layoutX="139.0" layoutY="63.0" prefHeight="200.0" prefWidth="322.0" />
        <Button fx:id="settleDebtButton" layoutX="510.0" layoutY="360.0" mnemonicParsing="false" onAction="#handleSettleDebt" text="Settle Debt" />
        <Button fx:id="backButton" layoutX="14.0" layoutY="360.0" mnemonicParsing="false" onAction="#handleBack" text="Back" />
      <ComboBox fx:id="participants" onAction="#selectParticipant" layoutX="139.0" layoutY="280.0" prefHeight="26.0" prefWidth="177.0" />
      <Button fx:id="allDebts" onAction="#showAllDebts" layoutX="431.0" layoutY="280.0" mnemonicParsing="false" text="All" />
      <Button fx:id="debtsIncludingParticipant" onAction="#showDebtsIncludingParticipant" layoutX="347.0" layoutY="280.0" mnemonicParsing="false" text="Including" />
    </children>
</AnchorPane>
